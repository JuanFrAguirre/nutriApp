generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? // Stores OAuth access tokens
  access_token      String? // Stores OAuth access tokens
  expires_at        Int? // Unix timestamp of when the access token expires
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String          @id @default(uuid())
  name          String?
  email         String?         @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  Dish_Product  Dish_Product[]
  Entry_Dish    Entry_Dish[]
  CalendarEntry CalendarEntry[]
  Dish          Dish[]

  @@index([email])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum UnitType {
  relative
  absolute
}

model Product {
  id               String  @id @default(uuid())
  title            String
  tags             String?
  image            String?
  calories         Float
  proteins         Float
  carbohydrates    Float
  fats             Float
  presentationSize Float

  Dish_Product Dish_Product[]
}

model Dish_Product {
  id            String   @id @default(uuid())
  unitType      UnitType
  portionWeight Float

  productId String
  product   Product @relation(fields: [productId], references: [id])

  userEmail String
  user      User   @relation(fields: [userEmail], references: [email])

  dishId String
  dish   Dish   @relation(fields: [dishId], references: [id])
}

model Dish {
  id    String @id @default(uuid())
  title String

  userEmail String
  user      User   @relation(fields: [userEmail], references: [email])

  Entry_Dish Entry_Dish[]

  Dish_Product Dish_Product[]
}

model Entry_Dish {
  id       String @id @default(uuid())
  quantity String

  userEmail String
  user      User   @relation(fields: [userEmail], references: [email])

  dishId String
  Dish   Dish   @relation(fields: [dishId], references: [id])

  calendarEntryId String
  calendarEntry   CalendarEntry @relation(fields: [calendarEntryId], references: [id])
}

model CalendarEntry {
  id   String   @id @default(uuid())
  date DateTime

  userEmail String
  user      User   @relation(fields: [userEmail], references: [email])

  Entry_Dish Entry_Dish[]
}
